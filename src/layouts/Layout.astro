---
interface Props {
  title: string;
  description?: string;
  keywords?: string;
  image?: string;
  type?: string;
}

const { 
  title,
  description = "Dev Elevate - A comprehensive technical blog covering DSA, Web Development, System Design, OOP, and Machine Learning",
  keywords = "programming, coding, software development, web development, DSA, algorithms, system design, machine learning",
  image = "/social-image.jpg",
  type = "website"
} = Astro.props;

import GoogleAnalytics from '../components/GoogleAnalytics.astro';

const footerLinks = {
  learn: [
    { title: "DSA", href: "/dsa" },
    { title: "Web Development", href: "/web-dev" },
    { title: "System Design", href: "/system-design" },
    { title: "OOP", href: "/oops" },
    { title: "Machine Learning", href: "/machine-learning" }
  ],
  company: [
    { title: "About Us", href: "/about" },
    { title: "Contact", href: "/contact" },
    { title: "Privacy Policy", href: "/privacy" },
    { title: "Terms of Service", href: "/terms" }
  ],
  social: [
    { title: "Twitter", href: "https://twitter.com", icon: "ri:twitter-x-fill" },
    { title: "GitHub", href: "https://github.com/Satya900/DEV_MAIN", icon: "ri:github-fill" },
    { title: "LinkedIn", href: "https://linkedin.com", icon: "ri:linkedin-fill" },
    { title: "Discord", href: "https://discord.gg/GCkQ6cuY", icon: "ri:discord-fill" }
  ],
  contribute: [
    { title: "How to Contribute", href: "/contribute" },
    { title: "Code of Conduct", href: "/code-of-conduct" },
    { title: "Report Issues", href: "https://github.com/Satya900/DEV_MAIN/issues" },
    { title: "Feature Requests", href: "https://github.com/Satya900/DEV_MAIN/discussions" }
  ],
  resources: [
    { title: "Sitemap", href: "/sitemap.xml" },
    { title: "RSS Feed", href: "/rss.xml" }
  ]
};

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    
    <title>{title}</title>
    
    <!-- SEO Meta Tags -->
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Dev Elevate Team" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Additional Meta Tags -->
    <meta name="theme-color" content="#16a34a" />
    
    <!-- JSON-LD Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Dev Elevate",
        "url": "https://develevate.tech",
        "description": "A comprehensive technical blog covering DSA, Web Development, System Design, OOP, and Machine Learning",
        "publisher": {
          "@type": "Organization",
          "name": "Dev Elevate",
          "logo": {
            "@type": "ImageObject",
            "url": "https://develevate.tech/logo.png"
          }
        }
      }
    </script>
    
    <GoogleAnalytics />
  </head>
  <body class="bg-gray-50 flex flex-col min-h-screen">
    <header class="bg-gray-900 text-white fixed w-full top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="flex items-center space-x-2 transition-transform hover:scale-105">
            <span class="text-2xl font-bold font-mono">&lt;/&gt;</span>
            <span class="text-2xl font-bold">Dev Elevate</span>
          </a>
          
          <button id="menuButton" class="md:hidden p-2 rounded-md hover:bg-gray-800 transition-colors" aria-label="Toggle menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>

          <div class="hidden md:flex space-x-8">
            <a href="/dsa" class="hover:text-green-400 transition-colors">DSA</a>
            <a href="/web-dev" class="hover:text-green-400 transition-colors">Web Dev</a>
            <a href="/system-design" class="hover:text-green-400 transition-colors">System Design</a>
            <a href="/oops" class="hover:text-green-400 transition-colors">OOP</a>
            <a href="/machine-learning" class="hover:text-green-400 transition-colors">Machine Learning</a>
            <a href="/projects" class="hover:text-green-400 transition-colors">Projects</a>
            <a href="/roadmaps" class="hover:text-green-400 transition-colors">Roadmaps</a>
            <a href="/contact" class="hover:text-green-400 transition-colors">Contact</a>
          </div>
        </div>

        <div id="mobileMenu" class="md:hidden hidden">
          <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="/dsa" class="block px-3 py-2 rounded-md hover:bg-gray-800 transition-colors">DSA</a>
            <a href="/web-dev" class="block px-3 py-2 rounded-md hover:bg-gray-800 transition-colors">Web Dev</a>
            <a href="/system-design" class="block px-3 py-2 rounded-md hover:bg-gray-800 transition-colors">System Design</a>
            <a href="/oops" class="block px-3 py-2 rounded-md hover:bg-gray-800 transition-colors">OOP</a>
            <a href="/machine-learning" class="block px-3 py-2 rounded-md hover:bg-gray-800 transition-colors">Machine Learning</a>
            <a href="/projects" class="block px-3 py-2 rounded-md hover:bg-gray-800 transition-colors">Projects</a>
            <a href="/roadmaps" class="block px-3 py-2 rounded-md hover:bg-gray-800 transition-colors">Roadmaps</a>
            <a href="/contact" class="block px-3 py-2 rounded-md hover:bg-gray-800 transition-colors">Contact</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="pt-16 flex-grow">
      <slot />
    </main>

    <footer class="bg-gray-900 text-white mt-16">
      <div class="max-w-7xl mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 mb-8">
          <div class="space-y-4">
            <div class="flex items-center space-x-2">
              <span class="text-2xl font-bold font-mono">&lt;/&gt;</span>
              <span class="text-2xl font-bold">Dev Elevate</span>
            </div>
            <p class="text-gray-400 text-sm">
              Empowering developers with comprehensive tutorials and resources for continuous learning and growth.
            </p>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">Learn</h3>
            <ul class="space-y-2">
              {footerLinks.learn.map(link => (
                <li>
                  <a 
                    href={link.href}
                    class="text-gray-400 hover:text-green-400 transition-colors"
                  >
                    {link.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">Company</h3>
            <ul class="space-y-2">
              {footerLinks.company.map(link => (
                <li>
                  <a 
                    href={link.href}
                    class="text-gray-400 hover:text-green-400 transition-colors"
                  >
                    {link.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">Contribute</h3>
            <ul class="space-y-2">
              {footerLinks.contribute.map(link => (
                <li>
                  <a 
                    href={link.href}
                    class="text-gray-400 hover:text-green-400 transition-colors"
                  >
                    {link.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">Resources</h3>
            <ul class="space-y-2">
              {footerLinks.resources.map(link => (
                <li>
                  <a 
                    href={link.href}
                    class="text-gray-400 hover:text-green-400 transition-colors"
                  >
                    {link.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <div class="border-t border-gray-800 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
            <p class="text-gray-400 text-sm">
              &copy; {new Date().getFullYear()} Dev Elevate. All rights reserved.
            </p>
            <div class="flex space-x-6">
              {footerLinks.social.map(link => (
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-400 hover:text-green-400 transition-colors"
                  title={link.title}
                >
                  <i class={`${link.icon} text-xl`}></i>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
  }
  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    padding: 0;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes slideIn {
    from { transform: translateX(-100%); }
    to { transform: translateX(0); }
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }

  .animate-slide-in {
    animation: slideIn 0.3s ease-out forwards;
  }

  .hover-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }
</style>

<script>
  const menuButton = document.getElementById('menuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    if (!mobileMenu?.classList.contains('hidden')) {
      mobileMenu?.classList.add('animate-slide-in');
    }
  });

  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.bg-white');
    cards.forEach((card, index) => {
      card.classList.add('hover-card');
      card.style.opacity = '0';
      card.classList.add('animate-fade-in');
      card.style.animationDelay = `${index * 0.1}s`;
    });
  });
</script>
